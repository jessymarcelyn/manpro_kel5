<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="258dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="15dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:layout_editor_absoluteX="125dp">

            <View
                android:id="@+id/view_schedule"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#125B2B"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_bus"
                android:layout_width="48dp"
                android:layout_height="49dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.044"
                app:layout_constraintStart_toStartOf="@+id/view_schedule"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bus" />

            <TextView
                android:id="@+id/tv_keberangkatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="KEBERANGKATAN : "
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.06"
                app:layout_constraintStart_toEndOf="@+id/iv_bus"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_tanggal"
                android:layout_width="158dp"
                android:layout_height="26dp"
                android:layout_marginTop="16dp"
                android:text="5 AGUSTUS 2024"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/view_schedule"
                app:layout_constraintHorizontal_bias="0.483"
                app:layout_constraintStart_toEndOf="@+id/tv_keberangkatan"
                app:layout_constraintTop_toTopOf="@+id/view_schedule" />

            <TextView
                android:id="@+id/tv_lokasi1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="268dp"
                android:text="LOKASI ASAL :"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_loc1" />

            <TextView
                android:id="@+id/tv_lokasi2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="144dp"
                android:text="LOKASI TUJUAN :"
                app:layout_constraintEnd_toStartOf="@+id/tv_estimasibiaya"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/tv_lokasi1"
                app:layout_constraintTop_toTopOf="@+id/iv_loc2" />

            <TextView
                android:id="@+id/tv_berangkat"
                android:layout_width="120dp"
                android:layout_height="26dp"
                android:layout_marginTop="8dp"
                android:text="Berangkat :"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.709"
                app:layout_constraintStart_toEndOf="@+id/tv_lokasi1"
                app:layout_constraintTop_toBottomOf="@+id/view_schedule" />

            <TextView
                android:id="@+id/tv_stasiun1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="STASIUN PASAR TURI"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_lokasi1"
                app:layout_constraintTop_toBottomOf="@+id/tv_lokasi1" />

            <TextView
                android:id="@+id/tv_stasiun2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="STASIUN GUBENG"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_lokasi1"
                app:layout_constraintTop_toBottomOf="@+id/tv_lokasi2" />

            <TextView
                android:id="@+id/tv_estimasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="60dp"
                android:textStyle="bold"
                android:text="Estimasi Waktu :"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_waktuBerangkat" />

            <TextView
                android:id="@+id/tv_estimasibiaya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="60dp"
                android:text="Estimasi Biaya :"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/tv_estimasi"
                app:layout_constraintTop_toBottomOf="@+id/tv_waktu" />

            <TextView
                android:id="@+id/tv_waktuBerangkat"
                android:layout_width="175dp"
                android:layout_height="38dp"
                android:layout_marginTop="4dp"
                android:text="07 : 30 WIB"
                android:textSize="30dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/tv_stasiun1"
                app:layout_constraintTop_toBottomOf="@+id/tv_berangkat" />

            <ImageView
                android:id="@+id/iv_loc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/tv_lokasi1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_schedule"
                app:srcCompat="@drawable/location1" />

            <ImageView
                android:id="@+id/iv_loc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                app:layout_constraintEnd_toStartOf="@+id/tv_lokasi2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/iv_loc1"
                app:layout_constraintTop_toBottomOf="@+id/iv_loc1"
                app:srcCompat="@drawable/location2" />

            <TextView
                android:id="@+id/tv_waktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="45 Menit"
                app:layout_constraintStart_toStartOf="@+id/tv_estimasi"
                app:layout_constraintTop_toBottomOf="@+id/tv_estimasi" />

            <TextView
                android:id="@+id/tv_biaya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="12dp"
                android:text="Rp. 25.000.000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/tv_estimasibiaya"
                app:layout_constraintTop_toBottomOf="@+id/tv_estimasibiaya"
                app:layout_constraintVertical_bias="0.157" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>