<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_tAwal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:text="St. Gubeng"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_tAkhir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="St. mandala"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tAwal" />

    <TextView
        android:id="@+id/tv_EstimasiWaktu"
        android:layout_width="137dp"
        android:layout_height="51dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="40dp"
        android:text="Estimasi Waktu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_EstimasiBiaya"
        android:layout_width="118dp"
        android:layout_height="36dp"
        android:layout_marginTop="28dp"
        android:text="Estimasi BIaya"
        app:layout_constraintEnd_toEndOf="@+id/tv_EstimasiWaktu"
        app:layout_constraintTop_toBottomOf="@+id/tv_EstimasiWaktu" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewRouteDetail"
        android:layout_width="418dp"
        android:layout_height="459dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_EstimasiBiaya" />

</androidx.constraintlayout.widget.ConstraintLayout>