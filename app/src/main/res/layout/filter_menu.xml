<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded"
    android:orientation="vertical">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="64dp"
        android:layout_gravity="center|top"
        android:scaleType="centerCrop"
        android:src="@drawable/minus" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:text="Preferensi Kendaraan :"
            android:textSize="20sp"
            android:textStyle="bold" />

<!--        bus-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">


            <ImageView
                android:id="@+id/imageView20"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:maxWidth="30dp"
                app:srcCompat="@drawable/ic_bus" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Bus"
                android:textSize="18sp" />

            <Switch
                android:id="@+id/idSwitch"
                android:layout_width="281dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:checked="false"
                android:layout_marginLeft="100sp" />

        </LinearLayout>

<!--        kereta-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">


            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                app:srcCompat="@drawable/ic_train_green" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Kereta"
                android:textSize="18sp" />

            <Switch
                android:id="@+id/idSwitch2"
                android:layout_width="261dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:checked="false"
                android:layout_marginLeft="100sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:text="Opsi Rute :"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroupFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/btnRadio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="5dp"
                android:padding="8dp"
                android:text="Rute tercepat"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/btnRadio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="5dp"
                android:padding="8dp"
                android:text="Rute termurah"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/btnRadio3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="5dp"
                android:padding="8dp"
                android:text="Rute sedikit transfer"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:textSize="18sp" />
        </RadioGroup>

        <Button
            android:id="@+id/btnSort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="#117D36"
            android:text="Urutkan"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>
