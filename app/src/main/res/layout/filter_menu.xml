<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded"
    android:orientation="vertical">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="64dp"
        android:layout_gravity="center|top"
        android:scaleType="centerCrop"
        android:src="@drawable/minus" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:text="Urutkan Berdasarkan : "
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroupFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RadioButton
            android:id="@+id/btnRadio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:text="Rute tercepat"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/btnRadio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:text="Rute berdasarkan kendaraan"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/btnRadio3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:text="Rute sedikit transfer"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="20sp" />
        </RadioGroup>

        <Button
            android:id="@+id/btnSort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="#117D36"
            android:textSize="20sp"
            android:text="Urutkan" />
    </LinearLayout>


</LinearLayout>
